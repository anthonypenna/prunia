{
	"name": "prunia",
	"version": "0.0.0",
	"description": "",
	"main": "./bin/prunia.js",
	"scripts": {
		"clean:bin": "rm -rf bin",
		"clean:link": "pnpm unlink",
		"clean": "pnpm clean:bin && pnpm clean:link",
		"build:bin": "tsc --project tsconfig.build.json",
		"build:link": "pnpm link --global",
		"build": "pnpm build:bin && pnpm build:link",
		"make": "pnpm clean && pnpm build",
		"unit": "vitest --silent --run",
		"unit:watch": "vitest",
		"unit:coverage": "vitest --silent --coverage --run",
		"prepare": "husky install",
		"lint": "eslint --cache --fix src/*",
		"format": "prettier --write src"
	},
	"author": {
		"email": "penna1296@gmail.com",
		"name": "anthonypenna",
		"url": "https://github.com/anthonypenna"
	},
	"license": "MIT",
	"devDependencies": {
		"@types/module-alias": "^2.0.1",
		"@types/node": "^17.0.8",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"c8": "^7.11.0",
		"eslint": "^8.6.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.1.7",
		"prettier": "^2.5.1",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.4",
		"vite": "^2.7.10",
		"vitest": "^0.0.141"
	},
	"preferGlobal": true,
	"bin": {
		"prunia": "./bin/prunia.js"
	},
	"dependencies": {
		"chalk": "4.1.2",
		"module-alias": "^2.2.2"
	},
	"_moduleAliases": {
		"~": "./bin"
	},
	"lint-staged": {
		"*.ts": "pnpm lint",
		"*.{ts,md}": "pnpm format"
	},
	"husky": {
		"hooks": {
			"post-merge": "prunia",
			"pre-commit": "lint-staged",
			"pre-push": "lint-staged && pnpm unit:coverage"
		}
	}
}
